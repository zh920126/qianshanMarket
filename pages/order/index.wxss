/* pages/order/index.wxss */
.order-top {
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}
.order-top view {
  height: 88rpx;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.order-top .on {
  border-bottom: 12rpx solid #eb4450;
}
.line {
  height: 30rpx;
  background-color: #f4f4f4;
}
.goods-list {
  height: 260rpx;
  margin-left: 20rpx;
  padding: 30rpx 35rpx 30rpx 0rpx;
  border-bottom: 1px solid #ddd;
  font-size: 28rpx;
  box-sizing: border-box;
}
.goods-list navigator {
  display: flex;
}
.goods-list navigator image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}
.goods-list navigator .good_info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-list navigator .good_info .good-title {
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.goods-list navigator .good_info .good-price {
  color: #eb4500;
  font-size: 35rpx;
  display: flex;
  justify-content: space-between;
}
.goods-list navigator .good_info .good-price text:nth-child(1)::before {
  content: "ï¿¥";
  padding-bottom: 4rpx;
  font-size: 20rpx;
  color: #eb4500;
}
.goods-list navigator .good_info .good-price text:nth-child(2) {
  font-size: 18rpx;
  color: #666;
}
.subtotal {
  line-height: 88rpx;
  margin-left: 16rpx;
  padding-right: 16rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: #666;
  border-bottom: 1rpx solid #ddd;
}
.orderNum {
  height: 88rpx;
  display: flex;
  padding: 0rpx 16rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom: 30rpx solid #f4f4f4;
  color: #666;
}
.orderNum .pay {
  height: 56rpx;
  width: 156rpx;
  border: 2rpx solid #999;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  color: #eb4450;
}
