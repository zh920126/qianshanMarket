/* pages/collect/index.wxss */
.collect-top {
  widows: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}
.collect-top view {
  width: 100%;
  height: 100%;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #ddd;
}
.collect-top .col {
  color: #eb4500;
  font-weight: 600;
  border-bottom: 1px solid #eb4500;
}
.all {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  margin-left: 30rpx;
}
.all-item {
  margin-right: 20rpx;
  padding: 10rpx;
  border: 1px solid #ddd;
}
.all .col-all {
  color: #eb4500;
  border: 1px solid #eb4500;
}
